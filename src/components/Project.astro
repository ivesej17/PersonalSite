---
import LinkButton from './LinkButton.astro';
export interface Props {
    title: string;
    imageFilename: string;
    description: string;
    linkToProject?: string;
}

const { title, description, imageFilename, linkToProject } = Astro.props;
---

<div class="flex flex-col gap-4">
    <h1 class="font-semibold text-xl">{title}</h1>
    <img class="object-cover rounded-xl" src={`/images/${imageFilename}`} />
    <p>{description}</p>
    {
        linkToProject && (
            <a href={linkToProject} target="_blank" rel="noopener noreferrer" class="flex items-center justify-center">
                <button class="border px-3 py-2 w-full rounded-lg flex items-center justify-center gap-5 transition ease-in-out duration-200 hover:bg-slate-50 hover:text-black font-medium">
                    <p>Visit Site</p>
                </button>
            </a>
        )
    }
</div>
